<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <AssemblyName>WinAutoGui</AssemblyName>
    <TypingsDir>../../typings</TypingsDir>
    <BuildDir>build</BuildDir>
    <PublishDir>publish</PublishDir>
    <UseWPF>true</UseWPF>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DebugSymbols>False</DebugSymbols>
    <DebugType>None</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FlaUI.UIA2" Version="4.0.0" />
    <PackageReference Include="System.Management" Version="8.0.0" />
  </ItemGroup>
  
  <Target Name="CopyFiles" AfterTargets="AfterBuild">
    <ItemGroup>
      <BuildFiles Include="$(TargetDir)\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(BuildFiles)" DestinationFolder="$(BuildDir)" />
  </Target>

  <Target Name="RemoveBuildDir" BeforeTargets="BeforeBuild">
      <RemoveDir Directories="$(BuildDir)" />
  </Target>

  <Target Name="RemovePublishDir" BeforeTargets="BeforeBuild" Condition="'$(Configuration)'=='Release'">
      <RemoveDir Directories="$(BaseIntermediateOutputPath)" /><!-- obj -->
      <RemoveDir Directories="$(BaseOutputPath)" /><!-- bin -->
      <RemoveDir Directories="$(PublishDir)" />
      <Exec Command="dotnet restore" />
  </Target>

  <Target Name="GenerateStubs" AfterTargets="AfterBuild">
    <Exec Command="GeneratePythonNetStubs --roll-forward LatestMajor --dest-path=$(TypingsDir) --target-dlls=$(TargetPath)"/>
  </Target>
</Project>
